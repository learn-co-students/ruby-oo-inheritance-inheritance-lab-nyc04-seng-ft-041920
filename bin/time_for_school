#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

bill = Student.new
bill.first_name = "Bill"
bill.last_name = "Gates"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Halpert"

some_knowledge = avi.teach
some_knowledge2 = avi.teach
some_knowledge3 = avi.teach
some_knowledge4 = avi.teach

bill.learn(some_knowledge2)
steve.learn(some_knowledge)
steve.learn(some_knowledge3)
bill.learn(some_knowledge4)
# jim.learn(some_knowledge) He is not a student so he does not have access to the learn Instance method

puts "Steve just learned this important knowledge: '#{steve.knowledge.sample}' from Avi"
puts "Bill just learned this important knowledge: '#{bill.knowledge.sample}' from Avi"
